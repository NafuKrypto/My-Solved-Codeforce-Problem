#include <iostream>
#include<cstring>
#include<string.h>
using namespace std;
int main ()
{
char input[1000];
 int n ;
cin>>n;
for(int i=0;i<n;i++){
 
cin>>input;
long long int b =strlen(input);
switch(b>10){
    case 1:
 
 cout<<input[0]<<strlen(input)-2<<input[strlen(input)-1]<<endl;
 break;
 case 0:
    cout<<input<<endl;
    break;
 default:
    break;
 }
 }
 
 
  return 0;
}
